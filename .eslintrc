{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "array-bracket-spacing": [
      2,
      "never"
    ],
    "block-scoped-var": 1,
    "brace-style": [
      2,
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "computed-property-spacing": [
      2,
      "never"
    ],
    "curly": 2,
    "eol-last": 2,
    "eqeqeq": [
      2,
      "smart"
    ],
    "max-depth": 1,
    "max-len": [
      1,
      {
        "code": 100,
        "tabWidth": 2
      }
    ],
    "no-trailing-spaces": 2,
    "no-unused-vars": 1,
    "quotes": [
      2,
      "single"
    ],
    "keyword-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    "indent": [
      2,
      2
    ],
    "linebreak-style": [
      2,
      "unix",
      "windows"
    ],
    "semi": [
      2,
      "always"
    ]
  }
}
